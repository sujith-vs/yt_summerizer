{
  "manifest_version": 3,
  "name": "YouTube Summarizer",
  "version": "1.0",
  "description": "Summarizes YouTube videos",
  "icons": {
    "16": "icon16.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon16.png"
  },
  "permissions": ["tabs"],
  "host_permissions": ["<all_urls>"]
}